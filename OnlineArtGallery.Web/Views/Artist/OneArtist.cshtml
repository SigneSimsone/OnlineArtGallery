@model ArtistModel

@if (Model != null)
{
    <h2 id="OneArtist">Information about Artist</h2>
    <table id="OneArtistTable">
        <thead id="thead">
            <tr>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Surname)</th>
                <th>@Html.DisplayNameFor(x => x.PlaceOfBirth)</th>
            </tr>
        </thead>
        <tbody id="tbody">
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Surname</td>
                <td>@Model.PlaceOfBirth</td>
            </tr>
        </tbody>
    </table>
    <ul>
        @foreach (var artwork in Model.Artworks)
        {
            <li>
                @artwork.Title
                <form asp-controller="Artwork" asp-action="OpenArtwork" method="get">
                    <input type="submit" value="Open" />
                    @Html.Hidden("ArtworkId", artwork.Id)
                </form>
            </li>
        }
    </ul>

}
