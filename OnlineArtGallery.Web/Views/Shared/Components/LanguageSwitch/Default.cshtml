@model OnlineArtGallery.Web.ViewComponents.Models.LanguageSwitchModel

<div>
    <form method="GET">
        <div class="form-group">
            <label class="sr-only" for="language-switch">
                Culture
            </label>
            <select id="language-switch"
                    class="form-control"
                    name="culture"
                    onchange="this.parentElement.parentElement.submit();">
                @foreach (var culture in Model.SupportedCultures)
                {
                    <option value="@culture.Name"
                            selected="@(Model.CurrentUICulture.Name == culture.Name)">
                        @culture.NativeName
                    </option>
                }
            </select>
        </div>
    </form>
</div>
