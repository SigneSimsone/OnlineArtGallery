@model ArtworkModel
@inject IViewLocalizer Localizer

@if (Model != null)
{
    <p>@Localizer["Title"] @Model.Title</p>
    <p>@Localizer["Artist"] @Model.Artist.FullName</p>
    <p>@Localizer["Price"] @Model.Price</p>


    <form asp-action="AddOrder" method="post">
        @Html.Hidden("ArtworkId", Model.Id)
        <label for="new-address">@Localizer["Address"]:</label>
        <input type="text" id="new-address" name="address" />
        <input type="submit" value="@Localizer["Submit"]" />
    </form>

    <p>@Localizer["Payment info"]:</p>
    <p>@Localizer["Submit info"]</p>
    <p>@Localizer["Transfer"]:
        <ul>
            <li>Online Art Gallery</li>
            <li>LV95HABA0551982150241</li>
        </ul>
    </p>

}