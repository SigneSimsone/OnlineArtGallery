@model ArtworkModel

@if (Model != null)
{
    <p>@Html.DisplayNameFor(x => x.Title) @Model.Title</p>
    <p>@Html.DisplayNameFor(x => x.Artist) @Model.Artist.FullName</p>
    <p>@Html.DisplayNameFor(x => x.Price) @Model.Price</p>


    <form asp-action="AddOrder" method="post">
        @Html.Hidden("ArtworkId", Model.Id)
        <label for="new-address">Your Address:</label>
        <input type="text" id="new-address" name="address" />
        <input type="submit" value="Submit" />
    </form>

    <p>Info about the payment:</p>
}