@model ArtworkModel

<form asp-action="Edit" method="post">
    @Html.Hidden("Id", Model.Id)
    <label for="new-title">Title:</label>
    <input type="text" id="new-title" name="title" value="@Model.Title" />
    <label for="new-year">Year:</label>
    <input type="number" id="new-year" name="year" value="@Model.Year" />
    <label for="new-description">Description:</label>
    <input type="text" id="new-description" name="description" value="@Model.Description" />
    <label for="new-type">Type:</label>
    <input type="text" id="new-type" name="type" value="@Model.Type" />
    <label for="new-price">Price:</label>
    <input type="number" id="new-price" name="price" value="@Model.Price" />
    <label for="new-availability">Availability:</label>
    <input type="checkbox" id="new-availability" name="availability" value="@Model.Availability" />
    <input type="submit" value="Submit" />
</form>